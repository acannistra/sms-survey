# Database Configuration
# PostgreSQL connection string in the format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:pass@localhost:5432/sms_survey
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Twilio Configuration
# Get these from your Twilio account dashboard: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# Application Configuration
# Environment: development, staging, production
ENVIRONMENT=development
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Path to surveys directory (absolute or relative)
SURVEYS_DIR=./surveys
# Git commit SHA for survey versioning (auto-populated in deployment)
GIT_COMMIT_SHA=local

# Security Configuration
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=generate-with-secrets-token-hex-32
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
